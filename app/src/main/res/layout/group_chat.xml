<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24dp"
            android:id="@+id/group_chat_back_img_view"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/backward_arrow1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="48dp"
            android:id="@+id/group_image"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ellipse_15"
            android:layout_height="48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Group Name"
            android:id="@+id/group_name_text_view"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="20sp"

            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="25dp"
            android:id="@+id/groups_phone_img_view"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"


            android:layout_gravity="center"
            android:src="@drawable/phone_logo_green" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="23dp"
            android:layout_marginLeft="10dp"

            android:id="@+id/groups_video_img_view"
            android:layout_height="20dp"

            android:layout_gravity="center"
            android:src="@drawable/video_logo_green" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="24dp"
            android:id="@+id/groups_options"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/group_108" />

    </LinearLayout>


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1">

       <ListView
           android:layout_width="match_parent"
           android:id="@+id/list_view_id"
           android:layout_height="wrap_content">

       </ListView>
   </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:id="@+id/down_arrow_options"
            android:background="@drawable/green_round_background"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:src="@drawable/down_arrow_white" />


        <LinearLayout
            android:background="@drawable/border_green"
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:padding="2dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="310dp"
                android:layout_height="wrap_content"

                android:id="@+id/group_message_edit_text"
                android:hint="Say something..." />



            <ImageView
                android:layout_width="30dp"
                android:id="@+id/forward_groups_message"
                android:background="@drawable/green_round_background"

                android:layout_height="30dp"
                android:padding="6dp"
                android:layout_gravity="center"
                android:src="@drawable/forward_arrow" />


        </LinearLayout>

    </LinearLayout>

    <!--        This part need visibility off-->

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/emoji"
            android:layout_height="wrap_content"
            android:src="@drawable/emoji"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/camera"
            android:layout_height="wrap_content"
            android:src="@drawable/camera_green"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/location"
            android:layout_height="wrap_content"
            android:src="@drawable/location"/>
        <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
            android:id="@+id/microphone"
        android:layout_height="20dp"
        android:src="@drawable/microphone"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/attachment"
            android:layout_height="20dp"
            android:src="@drawable/attachment"/>




    </LinearLayout>
</LinearLayout>